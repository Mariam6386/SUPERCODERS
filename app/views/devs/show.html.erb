<div class="container">

  <img class="avatar-large" alt="avatar-large" src="https://media.istockphoto.com/id/1337144146/vector/default-avatar-profile-icon-vector.jpg?b=1&s=170667a&w=0&k=20&c=-qQGlKM8OQsSJCEkHnqS9FI94VRTkZ-7tg0K0u02XL0="

  <hr>
  <h1><%= @dev.name %></h1>
  <p><strong>Speciality:</strong> <%= @dev.description %></p>
  <p><strong>gitHub: </strong><%= link_to @dev.github_link %></p>
  <p><strong>Experience:</strong> <%= @dev.skills %></p>
  <h2><strong>Rate: </strong> <%= @dev.price %>$/hr</h2>
  <br>
  <%= link_to "Book now", new_dev_job_path(@dev), class: "btn-flat"%>
  <br>
  <br>

  <h2>Reviews</h2>
  <div class="cards">
    <% @dev.reviews.each do |review| %>
      <div class="card-product">
        <div class="card-product-infos">
          <h3><%= review.rating %></h3>
          <p class= "text"><%= review.comment %></p>
        </div>
      </div>
    <% end %>
  </div>


</div>
